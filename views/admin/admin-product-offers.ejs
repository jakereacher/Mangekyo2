<%- include("partials/header", { activePage: 'product-offers' }) %>

<div class="col-md-9 ms-sm-auto col-lg-10 px-md-4">
  <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
    <h1 class="h2">Product Offers</h1>
    <div class="btn-toolbar mb-2 mb-md-0">
      <a href="/admin/product-offers/create" class="btn btn-sm btn-outline-primary">
        <i class="fas fa-plus"></i> Create New Product Offer
      </a>
    </div>
  </div>

  <% if (success && success.length > 0) { %>
    <div class="alert alert-success alert-dismissible fade show" role="alert">
      <%= success %>
      <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
  <% } %>

  <% if (error && error.length > 0) { %>
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
      <%= error %>
      <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
  <% } %>

  <div class="card mb-4">
    <div class="card-header bg-primary text-white">
      <i class="fas fa-box me-1"></i>
      Product Offers
    </div>
    <div class="card-body">
      <p class="mb-3">
        Product offers apply discounts to specific products. When both a product offer and a category offer apply to the same product, the larger discount will be used.
      </p>

      <% if (offers && offers.length > 0) { %>
        <div class="table-responsive">
          <table class="table table-striped table-hover">
            <thead class="table-light">
              <tr>
                <th scope="col">#</th>
                <th scope="col">Name</th>
                <th scope="col">Discount</th>
                <th scope="col">Validity</th>
                <th scope="col">Status</th>
                <th scope="col">Actions</th>
              </tr>
            </thead>
            <tbody>
              <% offers.forEach((offer, index) => { %>
                <tr>
                  <td><%= ((pagination.currentPage - 1) * pagination.limit) + index + 1 %></td>
                  <td>
                    <strong><%= offer.name %></strong>
                    <div class="small text-muted"><%= offer.description %></div>
                  </td>
                  <td>
                    <% if (offer.discountType === 'percentage') { %>
                      <span class="badge bg-info"><%= offer.discountValue %>%</span>
                      <% if (offer.maxDiscountAmount) { %>
                        <div class="small text-muted">Max: ₹<%= offer.maxDiscountAmount %></div>
                      <% } %>
                    <% } else { %>
                      <span class="badge bg-success">₹<%= offer.discountValue %></span>
                    <% } %>
                    <% if (offer.minPurchaseAmount > 0) { %>
                      <div class="small text-muted">Min purchase: ₹<%= offer.minPurchaseAmount %></div>
                    <% } %>
                  </td>
                  <td>
                    <div><%= new Date(offer.startDate).toLocaleDateString() %></div>
                    <div>to</div>
                    <div><%= new Date(offer.endDate).toLocaleDateString() %></div>
                  </td>
                  <td>
                    <%
                      const now = new Date();
                      const isExpired = new Date(offer.endDate) < now;
                      const isActive = offer.isActive && !isExpired;
                    %>
                    <% if (isExpired) { %>
                      <span class="badge bg-danger">Expired</span>
                    <% } else if (isActive) { %>
                      <span class="badge bg-success">Active</span>
                    <% } else { %>
                      <span class="badge bg-warning text-dark">Inactive</span>
                    <% } %>
                  </td>
                  <td>
                    <div class="btn-group" role="group">
                      <a href="/admin/product-offers/edit/<%= offer._id %>" class="btn btn-sm btn-outline-primary">
                        <i class="fas fa-edit"></i>
                      </a>
                      <button class="btn btn-sm btn-outline-danger delete-offer" data-id="<%= offer._id %>">
                        <i class="fas fa-trash"></i>
                      </button>
                    </div>
                  </td>
                </tr>
              <% }); %>
            </tbody>
          </table>
        </div>
      <% } else { %>
        <div class="alert alert-info">
          <i class="fas fa-info-circle me-2"></i>
          No product offers found. <a href="/admin/product-offers/create" class="alert-link">Create your first product offer</a>.
        </div>
      <% } %>

      <!-- Pagination -->
      <% if (pagination && pagination.totalPages > 0) { %>
        <div class="mt-4">
          <style>
            .pagination-link {
              transition: all 0.3s ease;
            }
            .pagination-link:hover {
              transform: translateY(-1px);
              background-color: #f3f4f6;
            }
            .pagination-active {
              background-color: #2563eb;
              color: white;
            }
            .pagination-disabled {
              color: #9ca3af;
              cursor: not-allowed;
            }
          </style>

          <div class="d-flex justify-content-between align-items-center flex-wrap bg-white p-3 rounded shadow-sm">
            <div class="text-muted small mb-2 mb-md-0">
              Showing <span class="fw-medium"><%= (pagination.currentPage - 1) * pagination.limit + 1 %></span> to
              <span class="fw-medium"><%= Math.min(pagination.currentPage * pagination.limit, pagination.totalItems) %></span> of
              <span class="fw-medium"><%= pagination.totalItems %></span> offers
            </div>

            <div class="d-flex justify-content-center flex-wrap gap-1">
              <!-- First Page -->
              <% if (pagination.currentPage > 1) { %>
                <a href="?page=1<%= pagination.searchParams %>"
                   class="pagination-link px-3 py-1 rounded border text-decoration-none">
                  <i class="fas fa-angle-double-left"></i>
                </a>
              <% } else { %>
                <span class="px-3 py-1 rounded border pagination-disabled">
                  <i class="fas fa-angle-double-left"></i>
                </span>
              <% } %>

              <!-- Previous Page -->
              <% if (pagination.currentPage > 1) { %>
                <a href="?page=<%= pagination.currentPage - 1 %><%= pagination.searchParams %>"
                   class="pagination-link px-3 py-1 rounded border text-decoration-none">
                  <i class="fas fa-angle-left"></i>
                </a>
              <% } else { %>
                <span class="px-3 py-1 rounded border pagination-disabled">
                  <i class="fas fa-angle-left"></i>
                </span>
              <% } %>

              <!-- Page Numbers -->
              <%
              const maxVisiblePages = 5;
              let startPage = Math.max(1, pagination.currentPage - Math.floor(maxVisiblePages / 2));
              let endPage = Math.min(pagination.totalPages, startPage + maxVisiblePages - 1);

              if (endPage - startPage + 1 < maxVisiblePages) {
                  startPage = Math.max(1, endPage - maxVisiblePages + 1);
              }

              for (let i = startPage; i <= endPage; i++) {
              %>
                <% if (i === pagination.currentPage) { %>
                  <span class="px-3 py-1 rounded border pagination-active fw-medium">
                    <%= i %>
                  </span>
                <% } else { %>
                  <a href="?page=<%= i %><%= pagination.searchParams %>"
                     class="pagination-link px-3 py-1 rounded border text-decoration-none">
                    <%= i %>
                  </a>
                <% } %>
              <% } %>

              <!-- Next Page -->
              <% if (pagination.currentPage < pagination.totalPages) { %>
                <a href="?page=<%= pagination.currentPage + 1 %><%= pagination.searchParams %>"
                   class="pagination-link px-3 py-1 rounded border text-decoration-none">
                  <i class="fas fa-angle-right"></i>
                </a>
              <% } else { %>
                <span class="px-3 py-1 rounded border pagination-disabled">
                  <i class="fas fa-angle-right"></i>
                </span>
              <% } %>

              <!-- Last Page -->
              <% if (pagination.currentPage < pagination.totalPages) { %>
                <a href="?page=<%= pagination.totalPages %><%= pagination.searchParams %>"
                   class="pagination-link px-3 py-1 rounded border text-decoration-none">
                  <i class="fas fa-angle-double-right"></i>
                </a>
              <% } else { %>
                <span class="px-3 py-1 rounded border pagination-disabled">
                  <i class="fas fa-angle-double-right"></i>
                </span>
              <% } %>
            </div>

            <!-- Items per page selector -->
            <div class="d-flex align-items-center gap-2 mt-2 mt-md-0">
              <span class="text-muted small">Items per page:</span>
              <select onchange="window.location.href='?page=1&limit=' + this.value + '<%= pagination.searchParamsWithoutLimit %>'"
                      class="form-select form-select-sm" style="width: auto;">
                <option value="2" <%= pagination.limit == 2 ? 'selected' : '' %>>2</option>
                <option value="5" <%= pagination.limit == 5 ? 'selected' : '' %>>5</option>
                <option value="10" <%= pagination.limit == 10 ? 'selected' : '' %>>10</option>
                <option value="25" <%= pagination.limit == 25 ? 'selected' : '' %>>25</option>
                <option value="50" <%= pagination.limit == 50 ? 'selected' : '' %>>50</option>
              </select>
            </div>
          </div>
        </div>
      <% } %>
    </div>
  </div>
</div>

<!-- Delete Confirmation Modal -->
<div class="modal fade" id="deleteConfirmModal" tabindex="-1" aria-labelledby="deleteConfirmModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header bg-danger text-white">
        <h5 class="modal-title" id="deleteConfirmModalLabel">Confirm Delete</h5>
        <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <p>Are you sure you want to delete this product offer? This action cannot be undone.</p>
        <p class="mb-0 text-danger"><strong>Note:</strong> This will remove the offer from all associated products.</p>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
        <button type="button" class="btn btn-danger" id="confirmDelete">Delete</button>
      </div>
    </div>
  </div>
</div>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    let offerId;
    const deleteButtons = document.querySelectorAll('.delete-offer');
    const deleteModal = new bootstrap.Modal(document.getElementById('deleteConfirmModal'));
    const confirmDeleteBtn = document.getElementById('confirmDelete');

    deleteButtons.forEach(button => {
      button.addEventListener('click', function() {
        offerId = this.getAttribute('data-id');
        deleteModal.show();
      });
    });

    confirmDeleteBtn.addEventListener('click', function() {
      if (offerId) {
        fetch(`/admin/offers/delete/${offerId}`, {
          method: 'DELETE',
          headers: {
            'Content-Type': 'application/json'
          }
        })
        .then(response => response.json())
        .then(data => {
          if (data.success) {
            deleteModal.hide();
            window.location.reload();
          } else {
            alert('Failed to delete offer: ' + data.message);
          }
        })
        .catch(error => {
          console.error('Error:', error);
          alert('An error occurred while deleting the offer');
        });
      }
    });
  });
</script>

<%- include("partials/footer") %>
