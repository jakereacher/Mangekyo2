          <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
            <% Object.entries(product.specifications).forEach(([key, value])=> { %>
            <div>
              <h4 class="text-sm text-gray-400">
                <%= key %>
              </h4>
              <p class="text-white">
                <%= value %>
              </p>
            </div>
            <% }); %>
