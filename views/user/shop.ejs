                            confirmButtonColor: '#00ffff',
                            background: '#1F2937',
                            color: 'white'
                        });
                    } else {
                        alert('Something went wrong. Please try again.');
                    }

                    // Reset button
                    this.innerHTML = originalContent;
                    this.disabled = false;
                }
            });
        });
